{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "functions": {
    "api/*.py": {
      "maxDuration": 60
    }
  },
  "env": {
    "FLASK_ENV": "production",
    "CHROMA_DB_PATH": "/tmp/chroma_db"
  }
} 